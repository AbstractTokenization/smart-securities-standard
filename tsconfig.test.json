{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "types": [
      "@0xproject/typescript-typings/types/web3",
      "@cfxmarkets/vendor-types",
      "heap",
      "node",
      "mocha"
    ]
  },
  "include": [
    "./global.d.ts",
    "./build/*.json",
    "./src/*",
    "./test/*"
  ]
}
